<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Blogs</title>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.min.js"></script>

</head>
<body>
    <nav class="navbar navbar-primary bg-primary ">
    <div class="container">
        <p class="text-center text-white fw-bold fs-2">BLOGS WEBSITE</p>
    </div>
</nav>
    <div class="container">
        <h1 class="my-4">Blog Articles</h1>
        <!-- search input -->
        <form action="/blogs/search" method="post">
            <div class="mb-3">
                <label for="search" class="form-label">Search by Author Name</label>
                <input type="text" class="form-control" id="searcch" name="searchAuthor">
            </div>

            <div class="mb-3">
                <label for="search" class="form-label">Search By Title</label>
                <input type="text" class="form-control" id="searcch" name="searchTitle">
            </div>
              <button type="submit" class="btn btn-primary">Search</button>
        </form>
        
          <br> <br>
        <a href="/blogs/new" class="btn btn-success">NEW BLOG</a>
        <div class="row justifiy-content-between">
            <!-- here we getting our vars from the app.js and looping on them-->
        <% blogs.forEach(blog => { %>
            <div class="card mt-4 col-3 mx-1">
                <div class="card-body">
                    <img src="<%= blog.photo %>" class="img-fluid" alt="photo">
                    <br><br>
                    <h4 class="card-title text-center"><%= blog.title %></h4>
                    <br>
                    <div class="card-subtitle mb-2">
                        <div class="overflow-hidden" style="height:4.5rem">
                            <%= blog.description %>
                        </div>......
                        <br>
                        <br>
                        <p class="fw-bolder">Author Name:<br><span class="fw-normal"><%= blog.author %></span></p>
                    </div>    
                    <!-- to go to the route using slug -title in the url instead of id- -->
                        <a href="blogs/<%= blog.slug %>" class="btn btn-primary">Read More</a>
                    <!-- deleting with the method override using the id -->
                        <form class="d-inline" action="/blogs/<%= blog.id %>?_method=DELETE" method="POST">
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </form>
                </div> 
            </div>
        <% }) %>
    </div>
        </div>
        
        

</body>
</html>