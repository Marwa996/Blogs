
<div class="form-group">
    <label for="title">Title</label>
    <input required value="<%= blog.title %>" type="text" name="title" id="title" class="form-control">
</div>

<div class="form-group mt-3">
    <label for="description">Description</label>
    <textarea required name="description" id="description" class="form-control"><%= blog.description %></textarea>
</div>

<div class="form-group mt-3">
    <label for="photo">Image URL</label>
    <input required  name="photo" id="photo"  class="form-control" value="<%= blog.photo %>"/>
</div>

<div class="form-group mt-3">
    <label for="photo">Tags</label>
    <input required  name="tags" id="tags"  class="form-control" value="<%= blog.tags %>"/>
</div>

<div class="form-group mt-3">
    <label for="author">Author Name</label>
    <input required  name="author" id="author"  class="form-control" value="<%= blog.author%>"/>
</div>

<div class="mt-3">
    <!-- cancel button brings us back to the home page -->
<a href="/" class="btn btn-secondary">Cancel</a>
<!-- submit button will cal blogs.js from the form action -->
<button type="submit" class="btn btn-primary">Save</button>
</div>

